@model TiendaOnline.Models.Usuario

@{
    ViewData["Title"] = "Recargar Balance";
}


<h2>Recargar Balance</h2>
<form asp-action="RecargarBalance" method="post">
    <input type="hidden" asp-for="UsuarioId" value="@ViewBag.id" />
    <div class="form-group">
        <div class="container">
        </div>
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@ViewBag.id"
           class="btn btn-secondary">Cancelar</a>
    </div>
</form>